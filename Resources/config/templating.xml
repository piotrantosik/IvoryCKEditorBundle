<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="ivory_ck_editor.templating.helper" class="Ivory\CKEditorBundle\Templating\CKEditorHelper">
            <argument type="service" id="ivory_ck_editor.renderer" />
            <tag name="templating.helper" alias="ivory_ckeditor" />
        </service>

        <service
            id="ivory_ck_editor.templating.helper.javascript"
            class="Ivory\CKEditorBundle\Templating\CKEditorJavascriptHelper"
        >
            <argument type="service" id="templating.form.renderer" />
            <tag name="templating.helper" alias="ivory_ckeditor_javascript" />
        </service>
    </services>
</container>
